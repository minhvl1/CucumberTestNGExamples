<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="filename">./logs</Property>
    </Properties>
    <!-- Define custom levels before using them for filtering below. -->
    <CustomLevels>
        <CustomLevel name="NOTICE" intLevel="450"/>
    </CustomLevels>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%t] %-5level %d{HH:mm:ss.SSS}  %logger{36} - %msg%n"/>
        </Console>

        <File name="MyFile" fileName="myapp.log" bufferedIO="false" immediateFlush="true" append="false">
            <PatternLayout pattern="%d [%-7level] %logger{36} - %msg%n"/>-->
        </File>

        <RollingFile bufferedIO="false" immediateFlush="true" append="false"
                     name="file"

                     filePattern="${filename}/logdemo-%d{dd-MM-YYYY-HH-mm}.log">
            <PatternLayout>
                <pattern>%d{HH-mm-ss-SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="all">
            <!-- Only events at DIAG level or more specific are sent to the console. -->
            <AppenderRef ref="Console" level="info"/>
            <AppenderRef ref="MyFile" level="NOTICE"/>
            <AppenderRef ref="file" level="NOTICE"/>
        </Root>
    </Loggers>
</Configuration>